<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView android:id="@+id/alert_icon" android:layout_width="50dp" android:layout_height="50dp" android:padding="0dp" android:layout_marginRight="10dp" android:layout_centerVertical="true" />
    
    <TextView android:id="@+id/alert_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="10dp" android:layout_marginLeft="60dp" android:textSize="14sp" android:layout_centerVertical="true" />
	
</RelativeLayout>